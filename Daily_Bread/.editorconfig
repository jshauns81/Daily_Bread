# EditorConfig - https://editorconfig.org
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# C# files
[*.cs]
charset = utf-8-bom

# Razor files
[*.razor]
charset = utf-8-bom

# JSON files
[*.json]
indent_size = 2

# CSS files
[*.css]
indent_size = 2
