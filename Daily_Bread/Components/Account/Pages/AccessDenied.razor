@page "/Account/AccessDenied"
@attribute [AllowAnonymous]
@using Microsoft.AspNetCore.Authorization

<PageTitle>Access Denied</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="py-5">
            <span class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></span>
            <h1 class="mt-3">Access Denied</h1>
            <p class="lead text-muted">
                Sorry, you don't have permission to access this page.
            </p>
            <hr />
            <p>
                This area requires additional permissions. If you believe you should have access, 
                please contact an administrator.
            </p>
            <div class="mt-4">
                <a href="/" class="btn btn-primary me-2">
                    <span class="bi bi-house-door me-1"></span> Go Home
                </a>
                <a href="/Account/Login" class="btn btn-outline-secondary">
                    <span class="bi bi-box-arrow-in-right me-1"></span> Login as Different User
                </a>
            </div>
        </div>
    </div>
</div>
