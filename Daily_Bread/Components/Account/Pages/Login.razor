@page "/Account/Login"
@attribute [AllowAnonymous]
@layout Daily_Bread.Components.Layout.MinimalLayout
@using Microsoft.AspNetCore.Authorization

<PageTitle>Login - Daily Bread</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <img src="/images/bread-icon.png" alt="Daily Bread" class="brand-icon" />
            <h1>Daily Bread</h1>
            <p class="tagline">Earn your daily bread, one chore at a time</p>
        </div>
        
        @if (Error == "invalid")
        {
            <div class="alert alert-danger" role="alert">
                Invalid username or password.
            </div>
        }
        else if (Error == "lockout")
        {
            <div class="alert alert-danger" role="alert">
                Your account has been locked due to too many failed attempts. Please try again later.
            </div>
        }

        <form method="post" action="/Account/PerformLogin@(string.IsNullOrEmpty(ReturnUrl) ? "" : $"?ReturnUrl={Uri.EscapeDataString(ReturnUrl)}")">
            <div class="mb-4">
                <label for="username" class="form-label">Username</label>
                <input type="text" 
                       name="Input.UserName" 
                       id="username" 
                       class="nord-input" 
                       autocomplete="username" 
                       autocapitalize="off"
                       autocorrect="off"
                       spellcheck="false"
                       required
                       placeholder="Enter your username" />
            </div>
            
            <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <input type="password" 
                       name="Input.Password" 
                       id="password" 
                       class="nord-input" 
                       autocomplete="current-password"
                       required
                       placeholder="Enter your password" />
            </div>
            
            <div class="form-check mb-4">
                <input type="checkbox" name="Input.RememberMe" value="true" class="form-check-input" id="rememberMe" checked />
                <label class="form-check-label" for="rememberMe">Remember me on this device</label>
            </div>
            
            <button type="submit" class="btn btn-primary btn-login">
                <span class="bi bi-box-arrow-in-right me-2"></span>
                <span>Sign In</span>
            </button>
        </form>
        
        <div class="login-footer">
            <a href="/kid" class="kid-mode-link">
                <span class="bi bi-emoji-smile me-2"></span>Kid Mode (PIN Login)
            </a>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    [SupplyParameterFromQuery(Name = "error")]
    private string? Error { get; set; }
}
