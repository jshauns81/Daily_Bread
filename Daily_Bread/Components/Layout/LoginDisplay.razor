@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <div class="login-display-container">
            <span class="user-greeting">
                Hello, <strong>@context.User.Identity?.Name</strong>
            </span>
            <form method="post" action="/Account/Logout" @formname="logout-form">
                <AntiforgeryToken />
                <button type="submit" class="btn-auth">
                    Logout
                </button>
            </form>
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="/Account/Login" class="btn-auth">
            Login
        </a>
    </NotAuthorized>
</AuthorizeView>

<style>
    .login-display-container {
        display: flex;
        align-items: center;
        gap: 1rem;
        background: transparent;
    }
    
    .login-display-container form {
        background: transparent;
        margin: 0;
        padding: 0;
        border: none;
    }

    .user-greeting {
        color: var(--nord4);
        font-size: 0.875rem;
    }
    
    .user-greeting strong {
        color: var(--nord6);
    }
    
    /* Unified auth button style - compact */
    .btn-auth {
        background-color: transparent;
        color: var(--nord4);
        border: 1px solid var(--nord3);
        border-radius: 6px;
        padding: 0.375rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.15s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        white-space: nowrap;
        line-height: 1.4;
    }
    
    .btn-auth:hover {
        background-color: var(--nord10);
        border-color: var(--nord10);
        color: var(--nord6);
    }
    
    /* Logout button specific - red on hover */
    form .btn-auth:hover {
        background-color: var(--nord11);
        border-color: var(--nord11);
    }
</style>
