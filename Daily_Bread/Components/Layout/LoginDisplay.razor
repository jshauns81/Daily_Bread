@rendermode InteractiveServer
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <div class="login-display-container">
            <div class="user-dropdown">
                <button class="btn-user-menu" @onclick="ToggleDropdown" @onclick:stopPropagation="true" aria-expanded="@_showDropdown" aria-haspopup="true">
                    <span class="bi bi-person-circle" aria-hidden="true"></span>
                    <span class="user-name">@context.User.Identity?.Name</span>
                    <span class="bi bi-chevron-down dropdown-chevron" aria-hidden="true"></span>
                </button>
                
                @if (_showDropdown)
                {
                    <div class="user-dropdown-menu" role="menu">
                        <a href="/account/change-password" class="dropdown-item" role="menuitem">
                            <span class="bi bi-key" aria-hidden="true"></span> 
                            <span>Change Password</span>
                        </a>
                        <hr class="dropdown-divider" />
                        <form method="post" action="/Account/Logout" @formname="logout-form">
                            <AntiforgeryToken />
                            <button type="submit" class="dropdown-item dropdown-item-danger" role="menuitem">
                                <span class="bi bi-box-arrow-right" aria-hidden="true"></span>
                                <span>Logout</span>
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
        
        @if (_showDropdown)
        {
            <div class="dropdown-backdrop" @onclick="CloseDropdown"></div>
        }
    </Authorized>
    <NotAuthorized>
        <a href="/Account/Login" class="btn-auth">
            <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span>
            <span class="btn-auth-text">Login</span>
        </a>
    </NotAuthorized>
</AuthorizeView>

@code {
    private bool _showDropdown = false;

    private void ToggleDropdown()
    {
        _showDropdown = !_showDropdown;
    }

    private void CloseDropdown()
    {
        _showDropdown = false;
    }
}
