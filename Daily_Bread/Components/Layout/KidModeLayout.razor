@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    
    <!-- Google Fonts - Inter for modern typography + Noto Color Emoji for emoji support -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Noto+Color+Emoji&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
</head>
<body>
    <div class="kid-mode-container">
        @Body
    </div>

    <style>
        /* Nord Color Variables */
        :root {
            --nord0: #2E3440;
            --nord1: #3B4252;
            --nord2: #434C5E;
            --nord3: #4C566A;
            --nord4: #D8DEE9;
            --nord5: #E5E9F0;
            --nord6: #ECEFF4;
            --nord7: #8FBCBB;
            --nord8: #88C0D0;
            --nord9: #81A1C1;
            --nord10: #5E81AC;
            --nord11: #BF616A;
            --nord12: #D08770;
            --nord13: #EBCB8B;
            --nord14: #A3BE8C;
            --nord15: #B48EAD;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            -webkit-font-smoothing: antialiased;
        }

        .kid-mode-container {
            min-height: 100vh;
            background: linear-gradient(135deg, var(--nord0) 0%, var(--nord1) 50%, var(--nord2) 100%);
            padding: 20px;
            padding-bottom: env(safe-area-inset-bottom, 20px);
        }

        /* Make everything touch-friendly */
        .kid-mode-container button {
            min-height: 48px;
            font-size: 1.1rem;
        }

        .kid-mode-container .card {
            background-color: var(--nord1);
            border: 1px solid var(--nord3);
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
            color: var(--nord6);
        }

        .kid-mode-container .card-header {
            background-color: var(--nord2);
            border-bottom: 1px solid var(--nord3);
            color: var(--nord6);
            border-radius: 16px 16px 0 0;
        }

        .kid-mode-container .card-body {
            color: var(--nord4);
        }

        .kid-mode-container .text-muted {
            color: var(--nord4) !important;
        }

        .kid-mode-container .text-success {
            color: var(--nord14) !important;
        }

        .kid-mode-container .text-info {
            color: var(--nord8) !important;
        }

        .kid-mode-container .text-warning {
            color: var(--nord13) !important;
        }

        .kid-mode-container .text-danger {
            color: var(--nord11) !important;
        }

        .kid-mode-container .bg-success {
            background-color: var(--nord14) !important;
            color: var(--nord0) !important;
        }

        .kid-mode-container .bg-warning {
            background-color: var(--nord13) !important;
            color: var(--nord0) !important;
        }

        .kid-mode-container .bg-info {
            background-color: var(--nord8) !important;
            color: var(--nord0) !important;
        }

        .kid-mode-container .bg-success-subtle {
            background-color: rgba(163, 190, 140, 0.2) !important;
        }

        .kid-mode-container .bg-info-subtle {
            background-color: rgba(136, 192, 208, 0.15) !important;
        }

        .kid-mode-container .badge {
            font-weight: 500;
        }

        .kid-mode-container .progress {
            background-color: var(--nord2);
            border-radius: 10px;
        }

        .kid-mode-container .progress-bar {
            background-color: var(--nord8);
        }

        .kid-mode-container .btn-outline-light {
            color: var(--nord4);
            border-color: var(--nord3);
        }

        .kid-mode-container .btn-outline-light:hover {
            background-color: var(--nord2);
            border-color: var(--nord4);
            color: var(--nord6);
        }

        .kid-mode-container .btn-light {
            background-color: var(--nord4);
            color: var(--nord0);
            border: none;
        }

        .kid-mode-container .btn-light:hover {
            background-color: var(--nord6);
        }

        .kid-mode-container .alert-danger {
            background-color: rgba(191, 97, 106, 0.2);
            border: none;
            color: var(--nord11);
        }

        .kid-mode-container .spinner-border {
            color: var(--nord8);
        }

        /* Emoji support */
        .emoji, .badge-icon {
            font-family: 'Noto Color Emoji', 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', sans-serif;
        }
    </style>
</body>
</html>
