@page "/account/change-password"
@attribute [Authorize]
@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@using Daily_Bread.Data
@using Daily_Bread.Components.Shared

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Change Password - Daily Bread</PageTitle>

<div class="change-password-container">
    <div class="card" style="max-width: 500px; margin: 0 auto;">
        <div class="card-header">
            <h4 class="mb-0"><span class="bi bi-key me-2"></span>Change Password</h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger alert-dismissible">
                    @_errorMessage
                    <button type="button" class="btn-close" @onclick="() => _errorMessage = null"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(_successMessage))
            {
                <div class="alert alert-success">
                    <span class="bi bi-check-circle me-2"></span>@_successMessage
                </div>
                <div class="text-center mt-3">
                    <a href="/" class="btn btn-primary">Return to Home</a>
                </div>
            }
            else
            {
                <p class="text-muted mb-4">
                    Enter your current password and choose a new password.
                </p>

                <EditForm Model="_model" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <div class="mb-3">
                        <label class="form-label">Current Password <span class="text-danger">*</span></label>
                        <PasswordInput @bind-Value="_model.CurrentPassword" 
                                       Placeholder="Enter current password"
                                       Autocomplete="current-password" />
                        <ValidationMessage For="() => _model.CurrentPassword" class="text-danger" />
                    </div>

                    <hr class="my-4" />

                    <div class="mb-3">
                        <label class="form-label">New Password <span class="text-danger">*</span></label>
                        <PasswordInput @bind-Value="_model.NewPassword" 
                                       Placeholder="Enter new password"
                                       Autocomplete="new-password"
                                       HelpText="At least 8 characters with upper, lower, digit, and special character." />
                        <ValidationMessage For="() => _model.NewPassword" class="text-danger" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Confirm New Password <span class="text-danger">*</span></label>
                        <PasswordInput @bind-Value="_model.ConfirmPassword" 
                                       Placeholder="Confirm new password"
                                       Autocomplete="new-password" />
                        <ValidationMessage For="() => _model.ConfirmPassword" class="text-danger" />
                        
                        @if (!string.IsNullOrEmpty(_model.ConfirmPassword) && _model.NewPassword != _model.ConfirmPassword)
                        {
                            <div class="text-danger mt-1">
                                <small><span class="bi bi-exclamation-triangle"></span> Passwords do not match.</small>
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="/" class="btn btn-outline-secondary">
                            <span class="bi bi-arrow-left me-1"></span> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary" 
                                disabled="@(_isLoading || _model.NewPassword != _model.ConfirmPassword)">
                            @if (_isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            <span class="bi bi-check-lg me-1"></span> Change Password
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    private ChangePasswordModel _model = new();
    private string? _errorMessage;
    private string? _successMessage;
    private bool _isLoading;

    private async Task HandleSubmit()
    {
        _errorMessage = null;
        _isLoading = true;

        try
        {
            if (_model.NewPassword != _model.ConfirmPassword)
            {
                _errorMessage = "New passwords do not match.";
                return;
            }

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);

            if (string.IsNullOrEmpty(userId))
            {
                _errorMessage = "Unable to identify user. Please log in again.";
                return;
            }

            var user = await UserManager.FindByIdAsync(userId);
            if (user == null)
            {
                _errorMessage = "User not found.";
                return;
            }

            var result = await UserManager.ChangePasswordAsync(user, _model.CurrentPassword, _model.NewPassword);

            if (result.Succeeded)
            {
                _successMessage = "Your password has been changed successfully.";
                
                // Refresh sign-in to update security stamp
                await SignInManager.RefreshSignInAsync(user);
            }
            else
            {
                var errors = result.Errors.Select(e => e.Description);
                _errorMessage = string.Join(" ", errors);
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private class ChangePasswordModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Current password is required.")]
        public string CurrentPassword { get; set; } = "";

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "New password is required.")]
        [System.ComponentModel.DataAnnotations.MinLength(8, ErrorMessage = "Password must be at least 8 characters.")]
        public string NewPassword { get; set; } = "";

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Please confirm your new password.")]
        public string ConfirmPassword { get; set; } = "";
    }
}
