@page "/kid"
@attribute [AllowAnonymous]
@layout Daily_Bread.Components.Layout.MinimalLayout
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Daily_Bread.Data
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Daily_Bread.Services

@inject Daily_Bread.Services.IAuthenticationService AuthService
@inject NavigationManager Navigation
@inject ILogger<KidLogin> Logger

<PageTitle>Quick Login - Daily Bread</PageTitle>

<div class="kid-login-container">
    <div class="kid-login-card">
        <div class="kid-login-header">
            <img src="/images/bread-icon.png" alt="Daily Bread" class="kid-brand-icon" />
            <h2>Daily Bread</h2>
            <p class="kid-tagline">Enter your PIN</p>
        </div>

        <div class="pin-entry">
            <!-- PIN Display -->
            <div class="pin-display">
                @for (int i = 0; i < 4; i++)
                {
                    var index = i;
                    <div class="pin-dot @(index < _pin.Length ? "filled" : "")">
                        @if (index < _pin.Length)
                        {
                            <span>@EmojiConstants.FilledCircle</span>
                        }
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="pin-error">
                    @_errorMessage
                </div>
            }

            <!-- Number Pad -->
            <div class="numpad">
                @for (int row = 0; row < 4; row++)
                {
                    var currentRow = row;
                    <div class="numpad-row">
                        @if (currentRow < 3)
                        {
                            @for (int col = 0; col < 3; col++)
                            {
                                var num = (currentRow * 3 + col + 1).ToString();
                                <button type="button" class="numpad-btn" @onclick="() => AddDigit(num)" disabled="@_isValidating">
                                    @num
                                </button>
                            }
                        }
                        else
                        {
                            <!-- Bottom row: Clear, 0, Backspace -->
                            <button type="button" class="numpad-btn numpad-action" @onclick="Clear" disabled="@_isValidating">
                                <span class="bi bi-x-lg"></span>
                            </button>
                            <button type="button" class="numpad-btn" @onclick='() => AddDigit("0")' disabled="@_isValidating">
                                0
                            </button>
                            <button type="button" class="numpad-btn numpad-action" @onclick="Backspace" disabled="@_isValidating">
                                <span class="bi bi-backspace"></span>
                            </button>
                        }
                    </div>
                }
            </div>

            @if (_isValidating)
            {
                <div class="pin-loading">
                    <div class="spinner-border spinner-border-sm" role="status">
                        <span class="visually-hidden">Checking...</span>
                    </div>
                    <span>Signing in...</span>
                </div>
            }
        </div>

        <div class="kid-login-footer">
            <a href="/Account/Login" class="back-link">
                <span class="bi bi-arrow-left"></span> Sign in with password
            </a>
        </div>
    </div>
</div>

@code {
    private string _pin = "";
    private string? _errorMessage;
    private bool _isValidating;

    private async Task AddDigit(string digit)
    {
        if (_pin.Length >= 4 || _isValidating) return;

        _errorMessage = null;
        _pin += digit;

        if (_pin.Length == 4)
        {
            await ValidatePin();
        }
    }

    private void Backspace()
    {
        if (_pin.Length > 0 && !_isValidating)
        {
            _pin = _pin[..^1];
            _errorMessage = null;
        }
    }

    private void Clear()
    {
        if (!_isValidating)
        {
            _pin = "";
            _errorMessage = null;
        }
    }

    private async Task ValidatePin()
    {
        _isValidating = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            // Use centralized AuthenticationService
            var credential = new PinCredential
            {
                Pin = _pin,
                RememberDevice = true
            };

            var result = await AuthService.SignInAsync(credential);

            if (result.Success)
            {
                Logger.LogInformation("PIN login successful for user {UserId}", result.User?.UserId);
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                _errorMessage = result.UserFacingMessage ?? "Invalid PIN. Try again!";
                Logger.LogWarning("PIN login failed: {ErrorCode}", result.ErrorCode);
            }

            _pin = "";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Exception during PIN login");
            _errorMessage = "An error occurred. Please try again.";
            _pin = "";
        }
        finally
        {
            _isValidating = false;
        }
    }
}
