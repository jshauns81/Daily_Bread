@page "/kid/home"
@layout KidModeLayout
@rendermode InteractiveServer

@using Daily_Bread.Services
@using Daily_Bread.Data.Models

@inject IChildProfileService ProfileService
@inject ITrackerService TrackerService
@inject ILedgerService LedgerService
@inject ISavingsGoalService GoalService
@inject IDateProvider DateProvider
@inject NavigationManager Navigation

<PageTitle>Kid Mode - Daily Bread</PageTitle>

@if (!_isValid)
{
    <div class="text-center py-5">
        <p class="text-white">Session expired. Please enter your PIN again.</p>
        <a href="/kid" class="btn btn-light btn-lg">Go to PIN Entry</a>
    </div>
}
else if (_isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-white" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="kid-dashboard">
        <!-- Header -->
        <div class="text-center mb-4">
            <h1 class="text-white display-6 mb-1">Hey, @_displayName! <span class="wave">&#x1F44B;</span></h1>
            <p class="text-white-50 mb-0">@DateProvider.Today.ToString("dddd, MMMM d")</p>
            
            @if (_currentStreak > 0)
            {
                <div class="streak-badge mt-2">
                    <span class="bi bi-fire"></span> @_currentStreak day streak!
                </div>
            }
        </div>

        <!-- Balance Card -->
        <div class="card mb-3">
            <div class="card-body text-center py-3">
                <p class="text-muted mb-1 small"><span class="bi bi-wallet2"></span> Your Balance</p>
                <h2 class="text-success mb-0">$@_balance.ToString("F2")</h2>
            </div>
        </div>

        <!-- Savings Goal (if set) -->
        @if (_primaryGoal != null)
        {
            <div class="card mb-3 bg-info-subtle">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center gap-3">
                        @if (!string.IsNullOrEmpty(_primaryGoal.ImageUrl))
                        {
                            <img src="@_primaryGoal.ImageUrl" alt="" class="goal-img" />
                        }
                        else
                        {
                            <div class="goal-img-placeholder"><span class="bi bi-bullseye"></span></div>
                        }
                        <div class="flex-grow-1">
                            <p class="mb-1 small text-muted">Saving for:</p>
                            <strong>@_primaryGoal.Name</strong>
                            <div class="progress mt-1" style="height: 10px;">
                                <div class="progress-bar bg-info" style="width: @_primaryGoal.ProgressPercent%;"></div>
                            </div>
                            <small class="text-muted">@_primaryGoal.ProgressPercent% there!</small>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Today's Chores -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><span class="bi bi-list-check"></span> Today's Chores</h5>
                <span class="badge @(_completedCount == _totalCount && _totalCount > 0 ? "bg-success" : "bg-warning text-dark")">
                    @_completedCount / @_totalCount
                </span>
            </div>
            <div class="card-body p-0">
                @if (_todayChores.Count == 0)
                {
                    <div class="text-center py-5">
                        <span class="bi bi-emoji-sunglasses" style="font-size: 4rem; color: #ffc107;"></span>
                        <h4 class="mt-2">Day Off!</h4>
                        <p class="text-muted mb-0">No chores today. Enjoy!</p>
                    </div>
                }
                else
                {
                    <div class="chore-list">
                        @foreach (var chore in _todayChores)
                        {
                            <div class="chore-item @GetChoreClass(chore)" @onclick="() => ToggleChore(chore)">
                                <div class="chore-check">
                                    @if (chore.IsApproved)
                                    {
                                        <span class="check-done bi bi-check-lg"></span>
                                    }
                                    else if (chore.IsCompleted)
                                    {
                                        <span class="check-pending bi bi-hourglass-split"></span>
                                    }
                                    else if (chore.IsPending)
                                    {
                                        <span class="check-empty"></span>
                                    }
                                    else
                                    {
                                        <span class="check-missed bi bi-x-lg"></span>
                                    }
                                </div>
                                <div class="chore-info">
                                    <span class="chore-name">@chore.ChoreName</span>
                                    @if (chore.IsCompleted && !chore.IsApproved)
                                    {
                                        <small class="text-info d-block">Waiting for approval...</small>
                                    }
                                </div>
                                <div class="chore-value">$@chore.Value.ToString("F2")</div>
                            </div>
                        }
                    </div>

                    @if (_pendingCount > 0)
                    {
                        <div class="text-center p-3 bg-light">
                            <p class="mb-2">Complete all chores to earn:</p>
                            <h4 class="text-success mb-0">$@_potentialEarnings.ToString("F2")</h4>
                        </div>
                    }
                    else if (_completedCount == _totalCount && _totalCount > 0)
                    {
                        <div class="text-center p-4 bg-success-subtle all-done">
                            <span class="bi bi-star-fill" style="font-size: 3rem; color: #ffc107;"></span>
                            <h4 class="text-success mt-2 mb-0">All Done!</h4>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Exit Button -->
        <div class="text-center mt-4">
            <a href="/kid" class="btn btn-outline-light">
                <span class="bi bi-lock"></span> Lock / Switch User
            </a>
        </div>
    </div>
}

<style>
    .kid-dashboard {
        max-width: 500px;
        margin: 0 auto;
    }

    .wave {
        display: inline-block;
        animation: wave-animation 2s ease-in-out infinite;
    }

    @@keyframes wave-animation {
        0%, 100% { transform: rotate(0deg); }
        25% { transform: rotate(20deg); }
        75% { transform: rotate(-10deg); }
    }

    .streak-badge {
        display: inline-block;
        background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
        color: white;
        padding: 6px 16px;
        border-radius: 20px;
        font-weight: bold;
    }

    .streak-badge .bi-fire {
        color: #ffeb3b;
    }

    .goal-img, .goal-img-placeholder {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        object-fit: contain;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #0dcaf0;
    }

    .chore-list {
        display: flex;
        flex-direction: column;
    }

    .chore-item {
        display: flex;
        align-items: center;
        padding: 16px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
        transition: background 0.2s;
    }

    .chore-item:last-child {
        border-bottom: none;
    }

    .chore-item:active {
        background: #f0f0f0;
    }

    .chore-item.completed {
        background: #d1e7dd;
    }

    .chore-item.approved {
        background: #d1e7dd;
        opacity: 0.7;
    }

    .chore-item.missed {
        background: #f8d7da;
        opacity: 0.7;
    }

    .chore-check {
        width: 50px;
        height: 50px;
        border: 3px solid #dee2e6;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 16px;
        flex-shrink: 0;
        font-size: 1.5rem;
    }

    .check-done {
        color: #198754;
        font-weight: bold;
    }

    .check-pending {
        color: #0dcaf0;
    }

    .check-missed {
        color: #dc3545;
    }

    .chore-info {
        flex: 1;
    }

    .chore-name {
        font-weight: 500;
        font-size: 1.1rem;
    }

    .chore-value {
        font-weight: bold;
        color: #198754;
        font-size: 1.2rem;
    }

    .all-done {
        animation: celebrate 0.5s ease-out;
    }

    @@keyframes celebrate {
        0% { transform: scale(0.9); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
</style>

@code {
    [SupplyParameterFromQuery(Name = "pid")]
    public int ProfileId { get; set; }

    [SupplyParameterFromQuery(Name = "uid")]
    public string? UserId { get; set; }

    private bool _isValid;
    private bool _isLoading = true;
    private string _displayName = "";
    private decimal _balance;
    private int _currentStreak;
    private SavingsGoalProgress? _primaryGoal;
    private List<TrackerChoreItem> _todayChores = [];

    private int _completedCount => _todayChores.Count(c => c.IsCompleted || c.IsApproved);
    private int _pendingCount => _todayChores.Count(c => c.IsPending);
    private int _totalCount => _todayChores.Count;
    private decimal _potentialEarnings => _todayChores.Where(c => c.IsPending).Sum(c => c.Value);

    protected override async Task OnInitializedAsync()
    {
        // Validate the session parameters
        if (ProfileId <= 0 || string.IsNullOrEmpty(UserId))
        {
            _isValid = false;
            _isLoading = false;
            return;
        }

        // Verify the profile exists and matches
        var profile = await ProfileService.GetProfileByUserIdAsync(UserId);
        if (profile == null || profile.Id != ProfileId)
        {
            _isValid = false;
            _isLoading = false;
            return;
        }

        _isValid = true;
        _displayName = profile.DisplayName;

        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        _isLoading = true;

        try
        {
            var today = DateProvider.Today;

            // Load balance
            _balance = await LedgerService.GetUserBalanceAsync(UserId!);

            // Load today's chores
            _todayChores = await TrackerService.GetTrackerItemsForUserOnDateAsync(UserId!, today);

            // Load primary goal
            _primaryGoal = await GoalService.GetPrimaryGoalAsync(UserId!);

            // Streak is calculated elsewhere, just show 0 for now
            _currentStreak = 0;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading kid dashboard: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ToggleChore(TrackerChoreItem chore)
    {
        // Only allow toggling pending chores
        if (!chore.IsPending) return;

        try
        {
            var today = DateProvider.Today;
            var result = await TrackerService.ToggleChoreCompletionAsync(
                chore.ChoreDefinitionId, 
                today, 
                UserId!, 
                isParent: false);
                
            if (result.Success)
            {
                await LoadDataAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error marking chore: {ex.Message}");
        }
    }

    private static string GetChoreClass(TrackerChoreItem chore)
    {
        if (chore.IsApproved) return "approved";
        if (chore.IsCompleted) return "completed";
        if (chore.IsMissed) return "missed";
        return "";
    }
}
