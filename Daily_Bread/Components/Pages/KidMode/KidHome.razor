@code {
    [SupplyParameterFromQuery(Name = "pid")]
    public int ProfileId { get; set; }

    [SupplyParameterFromQuery(Name = "uid")]
    public string? UserId { get; set; }

    private bool _isValid;
    private bool _isLoading = true;
    private string _displayName = "";
    private decimal _balance;
    private int _currentStreak;
    private SavingsGoalProgress? _primaryGoal;
    private List<TrackerChoreItem> _todayChores = [];

    private int _completedCount => _todayChores.Count(c => c.IsCompleted || c.IsApproved);
    private int _pendingCount => _todayChores.Count(c => c.IsPending);
    private int _totalCount => _todayChores.Count;
    private decimal _potentialEarnings => _todayChores.Where(c => c.IsPending).Sum(c => c.Value);

    protected override async Task OnInitializedAsync()
    {
        if (ProfileId <= 0 || string.IsNullOrEmpty(UserId))
        {
            _isValid = false;
            _isLoading = false;
            return;
        }

        var profile = await ProfileService.GetProfileByUserIdAsync(UserId);
        if (profile == null || profile.Id != ProfileId)
        {
            _isValid = false;
            _isLoading = false;
            return;
        }

        _isValid = true;
        _displayName = profile.DisplayName;
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        _isLoading = true;
        try
        {
            var today = DateProvider.Today;
            _balance = await LedgerService.GetUserBalanceAsync(UserId!);
            _todayChores = await TrackerService.GetTrackerItemsForUserOnDateAsync(UserId!, today);
            _primaryGoal = await GoalService.GetPrimaryGoalAsync(UserId!);
            _currentStreak = 0;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading kid dashboard: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ToggleChore(TrackerChoreItem chore)
    {
        if (!chore.IsPending) return;
        try
        {
            var today = DateProvider.Today;
            var result = await TrackerService.ToggleChoreCompletionAsync(chore.ChoreDefinitionId, today, UserId!, isParent: false);
            if (result.Success) await LoadDataAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error marking chore: {ex.Message}");
        }
    }

    private static string GetChoreClass(TrackerChoreItem chore)
    {
        if (chore.IsApproved) return "approved";
        if (chore.IsCompleted) return "completed";
        if (chore.IsMissed) return "missed";
        return "";
    }
}
