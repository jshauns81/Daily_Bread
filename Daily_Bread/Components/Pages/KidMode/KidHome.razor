@page "/kid/home"
@layout KidModeLayout

@using Daily_Bread.Services
@using Daily_Bread.Data.Models

@inject IChildProfileService ProfileService
@inject ITrackerService TrackerService
@inject ILedgerService LedgerService
@inject ISavingsGoalService GoalService
@inject IDateProvider DateProvider
@inject NavigationManager Navigation

<PageTitle>Kid Mode - Daily Bread</PageTitle>

@if (!_isValid)
{
    <div class="text-center py-5">
        <p class="text-white">Session expired. Please enter your PIN again.</p>
        <a href="/kid" class="btn btn-light btn-lg">Go to PIN Entry</a>
    </div>
}
else if (_isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="kid-dashboard">
        <!-- Header -->
        <div class="text-center mb-4">
            <h1 class="greeting mb-1">Hey, @_displayName! <span class="wave emoji">&#x1F44B;</span></h1>
            <p class="date-display mb-0">@DateProvider.Today.ToString("dddd, MMMM d")</p>
            
            @if (_currentStreak > 0)
            {
                <div class="streak-badge mt-2">
                    <span class="bi bi-fire"></span> @_currentStreak day streak!
                </div>
            }
        </div>

        <!-- Balance Card -->
        <div class="card mb-3 balance-card">
            <div class="card-body text-center py-3">
                <p class="balance-label mb-1"><span class="bi bi-wallet2"></span> Your Balance</p>
                <h2 class="balance-amount mb-0">$@_balance.ToString("F2")</h2>
            </div>
        </div>

        <!-- Savings Goal (if set) -->
        @if (_primaryGoal != null)
        {
            <div class="card mb-3 goal-card">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center gap-3">
                        @if (!string.IsNullOrEmpty(_primaryGoal.ImageUrl))
                        {
                            <img src="@_primaryGoal.ImageUrl" alt="" class="goal-img" />
                        }
                        else
                        {
                            <div class="goal-img-placeholder"><span class="bi bi-bullseye"></span></div>
                        }
                        <div class="flex-grow-1">
                            <p class="mb-1 small goal-label">Saving for:</p>
                            <strong class="goal-name">@_primaryGoal.Name</strong>
                            <div class="progress mt-1" style="height: 10px;">
                                <div class="progress-bar" style="width: @(_primaryGoal.ProgressPercent)%;"></div>
                            </div>
                            <small class="goal-progress">@_primaryGoal.ProgressPercent% there!</small>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Today's Chores -->
        <div class="card chores-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><span class="bi bi-list-check"></span> Today's Chores</h5>
                <span class="badge @(_completedCount == _totalCount && _totalCount > 0 ? "bg-success" : "bg-warning")">
                    @_completedCount / @_totalCount
                </span>
            </div>
            <div class="card-body p-0">
                @if (_todayChores.Count == 0)
                {
                    <div class="text-center py-5 day-off">
                        <span class="emoji day-off-icon">&#x1F60E;</span>
                        <h4 class="mt-2">Day Off!</h4>
                        <p class="mb-0">No chores today. Enjoy!</p>
                    </div>
                }
                else
                {
                    <div class="chore-list">
                        @foreach (var chore in _todayChores)
                        {
                            <div class="chore-item @GetChoreClass(chore)" @onclick="() => ToggleChore(chore)">
                                <div class="chore-check">
                                    @if (chore.IsApproved)
                                    {
                                        <span class="check-done bi bi-check-lg"></span>
                                    }
                                    else if (chore.IsCompleted)
                                    {
                                        <span class="check-pending bi bi-hourglass-split"></span>
                                    }
                                    else if (chore.IsPending)
                                    {
                                        <span class="check-empty"></span>
                                    }
                                    else
                                    {
                                        <span class="check-missed bi bi-x-lg"></span>
                                    }
                                </div>
                                <div class="chore-info">
                                    <span class="chore-name">@chore.ChoreName</span>
                                    @if (chore.IsCompleted && !chore.IsApproved)
                                    {
                                        <small class="chore-status d-block">Waiting for approval...</small>
                                    }
                                </div>
                                <div class="chore-value">$@chore.Value.ToString("F2")</div>
                            </div>
                        }
                    </div>

                    @if (_pendingCount > 0)
                    {
                        <div class="text-center p-3 potential-earnings">
                            <p class="mb-2">Complete all chores to earn:</p>
                            <h4 class="earnings-amount mb-0">$@_potentialEarnings.ToString("F2")</h4>
                        </div>
                    }
                    else if (_completedCount == _totalCount && _totalCount > 0)
                    {
                        <div class="text-center p-4 all-done">
                            <span class="emoji all-done-icon">&#x2B50;</span>
                            <h4 class="all-done-text mt-2 mb-0">All Done!</h4>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Exit Button -->
        <div class="text-center mt-4">
            <a href="/kid" class="btn btn-outline-light">
                <span class="bi bi-lock"></span> Lock / Switch User
            </a>
        </div>
    </div>
}

